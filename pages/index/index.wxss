/**index.wxss**/
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
}

.spin{
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

swiper{
  height: 270rpx;
}

swiper image{
  width: 100%;
  height: 270rpx;
}

.notice-bar{
  border-top: 1px solid #F7F7F7;
  background-color: #fff !important;
  color: #18ACCF !important;
}

.select{
  background-color: #fff;
}

.item{
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  border-bottom: 1px solid #F2F2F2;
}

.item:hover{
  /* background-color: #F7F7F7 */
}

.title,
.content{
  display: flex;
  align-items: center;
}

.title text{
  padding-left: 15rpx;
  color:#9696A1;
}

.content text{
  padding-right: 15rpx;
}

.btn{
  margin: 20rpx 30rpx;
  margin-top: 20rpx;
}

.popup{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  /* padding-left: 20rpx; */
  /* padding-right: 20rpx; */
}

.picker{
  line-height: 50px;
  text-align: center;
  font-size: 30rpx;
}

.avatar {
  position: relative;
  height: 200rpx;
}

.avatar view {
  position: absolute;
  top: 50%;
  left: 60rpx;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
}

.avatar image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid #fff;
}

.avatar text{
  padding-left: 20rpx;
  font-size: 30rpx;
}

.user-oper{
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.user-oper view{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 18rpx;
  width: 50%;
}

.user-oper text{
  font-size: 30rpx;
}

.other{
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}