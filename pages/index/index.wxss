/**index.wxss**/
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
}

.header{
  height: 110rpx;
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 40rpx 40rpx 0 40rpx;
  background-color: #fff;
  z-index: 100;
}

.time>view:last-child{
  color: rgb(153,153,153);
  font-size: 40rpx;
  font-weight: bold;
}

.search-bar{
  margin-left: 15px;
}

.search-bar > input{
  background-color: rgb(238,238,238);
  padding: 0 15px;
  width: 250rpx;
  border-radius: 36rpx;
  font-size: 30rpx;
  height: 64rpx;
}

.list{
  /* margin-top: 190rpx; */
  overflow: hidden;
}

.item{
  margin: 0 40rpx;
  border-radius: 24rpx;
  overflow: hidden;
  padding-top: 30rpx;
  height: 350rpx;
  position: relative;
  box-shadow: 0px 5px 10px 2px #eee;
  margin-bottom: 60rpx;
}

.item:last-child{
  margin-bottom: 30rpx;
}

.item image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.sign{
  position: absolute;
  padding-left: 15px;
  font-size: 28rpx;
  color: rgb(153,153,153);
  z-index: 100;
}

.title{
  position: absolute;
  top: 64rpx;
  padding-left: 15px;
  font-size: 40rpx;
  font-weight: bold;
  z-index: 100;
}

.desc{
  padding: 10px;
  width: calc(100% - 10px * 2);
  position: absolute;
  bottom: 0;
  background-color: #fff;
  font-size: 28rpx;
}

#wux-refresher{
  position: relative;
  top: 170rpx;
  margin-bottom: 88rpx;
}

.hot{
  margin: 0 40rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  padding: 0 0 20rpx 0;
  margin-bottom: 40rpx;
  
}

.sec{
  font-size: 28rpx;
  color: rgb(153,153,153);
}

.tags{
  /* margin-top: 10rpx; */
  display: flex;
  flex-wrap: wrap;
}

.tag{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  /*box-shadow: 0px 5px 10px 2px #eee;
  */border: 1px solid #eee;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: rgb(153,153,153);
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  overflow: hidden;
}

.tags image{
  width: 60rpx;
  height: 60rpx;
}

.tag view{
  margin: 0 10rpx;
}