.header{
  background-color: #FC6848;
  color: #fff;
  padding: 20rpx;
  font-weight: bold;
  font-size: 36rpx;
}

.header text:last-child{
  font-size: 26rpx;
  padding-left: 20rpx;
}

.info{
  padding: 20rpx;
  /* border-bottom: 2rpx solid #eee; */
  background-color: #fff;
}

.address{
  font-size: 36rpx;
}

.bus,.intro{
  margin-top: 6rpx;
  font-size: 26rpx;
  color: #ABABAB;
}

.price{
  margin-top: 8rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.price>view:first-child{
  color: #43B213;
  font-size: 28rpx;
}

.price>view:last-child>text:first-child{
  color: #ABABAB;
  font-size: 26rpx;
}

.price>view:last-child>text:last-child{
  color: #FC6848;
  font-size: 36rpx;
}

.passenger{
  margin-top: 8rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.none{
  font-size: 30rpx;
  color: #43B213;
}

.none view{
  display: flex;
  align-items: center;
}

.none text{
  padding-left: 8rpx;
}

.has{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.has>view:first-child>view:first-child{
  font-size: 32rpx;
}

.has>view:first-child>view:last-child{
  font-size: 26rpx;
  color: #ABABAB;
}

.operation{
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  background-color: #fff;
} 

.operation>view:first-child{
  padding: 30rpx 80rpx;
  font-size: 30rpx;
}

.operation>view:first-child text{
  color: #FF6647;
}

.operation>view:last-child{
  background-color: #FF6647;
  padding: 30rpx 80rpx;
  color: #fff;
  font-size: 32rpx;
}

.popup__button{
  width: 100%;
  text-align:center;
  color: #43B213;
  font-size: 32rpx;
}